#!/bin/bash

# MEXC Data Verification Script
# Automatically connects to localhost ClickHouse from host

echo "üîç MEXC Multi-Symbol Data Verification"
echo "====================================="
echo ""

# Activate virtual environment
if [ -f "venv/bin/activate" ]; then
    source venv/bin/activate
    echo "‚úÖ Virtual environment activated"
else
    echo "‚ùå Virtual environment not found. Run ./setup.sh first"
    exit 1
fi

# Set ClickHouse host to localhost for host-side verification
export CLICKHOUSE_HOST=localhost

# Run verification
echo "üöÄ Running verification with localhost connection..."
echo ""
python3 verify_data.py

echo ""
echo "üí° Note: Use 'CLICKHOUSE_HOST=localhost python3 verify_data.py' for manual verification"